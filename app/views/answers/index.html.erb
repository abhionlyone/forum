<%- model_class = Answer -%>
<div class="page-header">
  <h1>Answers provided by you:</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Question</th>
    </tr>
  </thead>
  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= link_to answer.id, answer_path(answer) %></td>
        <td><%= answer.question.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>
